<h1>NEW POST AREA</h1>



<%= form_for:post, url:posts_path do|f|%>
    <% if @post.errors.any?%>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>

    <%end%>


    <div>
        <%= f.label:text%><br>
        <%= f.text_field:title%>

    </div>

    <div>
        <%= f.label:text%><br>
        <%= f.text_area:text%>
    </div>

    <div>
        <%= f.submit:"Add Post" %>
    </div>
<%end%>

<%= link_to "Back",posts_path %>