<h1>ALL POSTS</h1>

<table>
    <tr>
        <th>TITLE</th>
        <th>TEXT</th>
    </tr>
    <% @posts.each do |p|%>
        <tr>
            <td><%= p.title %></td>
            <td><%= p.text %></td>
            <td><%= link_to 'Edit', edit_post_path(p) %></td>
            <td><%=link_to "Delete Post",post_path(p),method: :delete,data:{confirm:"Are you sure you want to delete this post?"}%></td>

        </tr>
    <%end%>

</table>

<%= link_to "Create New Post",new_post_path %>