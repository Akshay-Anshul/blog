<h1>EDITING POST</h1>



<%= form_for:post, url: post_path(@post),method: :patch do |f|%>
    <% if @post.errors.any?%>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>

    <%end%>


    <div>
        <%= f.label:text%><br>
        <%= f.text_field:title%>

    </div>

    <div>
        <%= f.label:text%><br>
        <%= f.text_area:text%>
    </div>

    <div>
        <%= f.submit:"Update Post" %>
    </div>
<%end%>

<%= link_to "Back",posts_path %>